<templateSet group="Nette">
  <template name="inject" value="/** @var $CLASS$ @inject */&#10;public $$$VARIABLE$;" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS" expression="classNameComplete()" defaultValue="" alwaysStopAt="true" />
    <variable name="VARIABLE" expression="underscoresToCamelCase(snakeCase(CLASS))" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="factory" value="protected function createComponent$COMPONENT$()&#10;{&#10;&#9;$END$&#10;}" toReformat="true" toShortenFQNames="true">
    <variable name="COMPONENT" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>