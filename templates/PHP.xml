<templateSet group="PHP">
  <template name="rp" value="namespace $NAMESPACE$;&#10;&#10;use Abstergo\Api\Rest;&#10;use Abstergo\Api\Security;&#10;&#10;&#10;class $NAME$ extends Rest\AbstractPresenter implements Rest\Method\$METHOD$&#10;{&#10;&#10;    /** Security\AccessVerifier */&#10;    private $accessVerifier;&#10;&#10;&#10;&#10;    public function __construct(Security\AccessVerifier $accessVerifier)&#10;    {&#10;        $this-&gt;accessVerifier = $accessVerifier;&#10;    }&#10;&#10;}" description="RESTful presenter class" toReformat="true" toShortenFQNames="true">
    <variable name="NAMESPACE" expression="completeSmart()" defaultValue="" alwaysStopAt="true" />
    <variable name="NAME" expression="fileNameWithoutExtension()" defaultValue="" alwaysStopAt="true" />
    <variable name="METHOD" expression="classNameComplete()" defaultValue="Get" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="grp" value="$$$VARIABLE_NAME$ = $request-&gt;getParameter('$PARAMETER_NAME$');" description="get request parameter" toReformat="true" toShortenFQNames="true">
    <variable name="PARAMETER_NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VARIABLE_NAME" expression="camelCase(String)" defaultValue="camelCase(PARAMETER_NAME)" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>